{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "window:allow-minimize",
    "window:allow-toggle-maximize",
    "window:allow-close",
    "window:allow-start-dragging",
    "window:allow-set-focus",
    "window:allow-set-effects",
    "webview:allow-create-webview-window",
    "log:default",
    "websocket:default",
    "os:allow-arch",
    "os:allow-platform",
    "os:allow-os-type",
    "os:allow-version",
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$APPCACHE/**/*" }]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://**/*"
        },
        {
          "url": "https://**/*"
        }
      ]
    },
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:allow-stat"
  ]
}
