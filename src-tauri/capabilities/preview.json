{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "preview",
  "description": "Capability for the preview window",
  "windows": ["preview"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "dialog:allow-save",
    "os:allow-os-type",
    "window:allow-minimize",
    "window:allow-toggle-maximize",
    "window:allow-close",
    "window:allow-start-dragging"
  ]
}
